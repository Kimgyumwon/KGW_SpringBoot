<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace="com.kgw.app.board.BoardDAO">
    	<!-- 전체 목록 조회 -->
    	<select id="list" resultType="com.kgw.app.board.BoardDTO">
    		SELECT * FROM board ORDER BY num DESC
    	</select>
    	<!-- 상제 정보 조회 -->
    	<select id="detail" resultType="com.kgw.app.board.BoardDTO" parameterType="com.kgw.app.board.BoardDTO">
    		SELECT * FROM board WHERE num=#{num}
    	</select>
    	<!-- 추가 -->
    	<insert id="add" parameterType="com.kgw.app.board.BoardDTO">
    		INSERT INTO board (writer,title,contents) VALUES (#{writer},#{title},#{contents})
    	</insert>
    	
    	<!-- 삭제 -->
    	<delete id="delete" parameterType="Long">
    		DELETE FROM board WHERE num=#{num}
    	</delete>
    	
    	<!-- 수정 -->
    	<update id="update" parameterType="java.util.Map">
    		UPDATE board SET title=#{t}, contents=#{c} WHERE num=#{n}
    	</update>
    	
    </mapper>