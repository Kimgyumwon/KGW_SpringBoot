<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace="com.kgw.app.board.notice.NoticeDAO">
    	<!-- 조회 -->
    	<select id="detail" resultType="NoticeDTO" parameterType="NoticeDTO">
    		SELECT * FROM notice WHERE board_num=#{boardNum}
    	</select>
    	
    	<!-- 목록 -->
    	<select id="list" resultType="NoticeDTO" parameterType="NoticeDTO">
    		SELECT * FROM notice
    	</select>
    	
    	<!-- 추가 -->
    	<insert id="add" parameterType="NoticeDTO">
    		INSERT INTO notice 
    		(board_title, board_writer, board_contents)
    		VALUES
    		(#{boardTitle}, #{boardWriter}, #{boardContents})
    	</insert>
    	<!-- 수정 -->
    	<update id="update" parameterType="NoticeDTO">
    		UPDATE notice
    		SET board_title=#{boardTitle}, board_writer=#{boardWriter}, board_contents=#{boardContents}
    		WHERE board_num=#{boardNum}
    	</update>
    	<!-- 삭제 -->
    	<delete id="delete" parameterType="NoticeDTO">
    		DELETE FROM notice
    		WHERE board_num = #{boardNum}
    	</delete>
    </mapper>